# ===========================================
# SpoonOS Agent Showcase - Environment Variables
# ===========================================
# Copy this file to .env and fill in your API keys

# ============ LLM Providers ============
# OpenAI API Key (Required for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (Required for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# DeepSeek API Key (Optional)
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Google Gemini API Key (Optional)
GEMINI_API_KEY=your-gemini-api-key-here

# ============ Default LLM Configuration ============
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL_NAME=gpt-4-turbo-preview

# ============ Tool API Keys ============
# Tavily Search API (for web search functionality)
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# CoinGecko API (for cryptocurrency data)
COINGECKO_API_KEY=your-coingecko-api-key-here

# ============ Web3 Configuration (Optional) ============
# Ethereum RPC URL
WEB3_RPC_URL=https://mainnet.infura.io/v3/your-infura-key

# Polygon RPC URL
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key

# BSC RPC URL
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Default Chain ID (1 = Ethereum, 137 = Polygon, 56 = BSC)
DEFAULT_CHAIN_ID=1

# Wallet Private Key (NEVER commit this to git!)
# WALLET_PRIVATE_KEY=your-private-key-here

# ============ Turnkey SDK (Optional) ============
# For secure transaction signing
TURNKEY_API_KEY=your-turnkey-api-key
TURNKEY_ORGANIZATION_ID=your-org-id

# ============ Memory Configuration (Optional) ============
# Mem0 API Key
MEM0_API_KEY=your-mem0-api-key

# ============ Logging Configuration ============
LOG_LEVEL=INFO
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan> - <level>{message}</level>

# ============ Agent Configuration ============
# Maximum reasoning iterations for ReAct Agent
MAX_ITERATIONS=10

# Temperature for LLM generation
TEMPERATURE=0.7

# ============ x402 Payment (Optional) ============
# x402 Facilitator URL
X402_FACILITATOR_URL=https://facilitator.x402.com

# x402 Payment Token
X402_PAYMENT_TOKEN=your-payment-token

# ============ Notification (Optional) ============
# Slack Webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Webhook URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============ Development ============
DEBUG=false
ENABLE_STREAMING=true
